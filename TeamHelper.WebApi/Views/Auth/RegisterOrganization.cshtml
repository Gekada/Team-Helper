@model RegisterOrganizationViewModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Sign up</h2>
            <form asp-action="Register" asp-controller="Auth" method="post">
                <input type="hidden" asp-for="ReturnUrl" />
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input type="email" class="form-control" asp-for="Email" />
                </div>
                <div class="form-group">
                    <label asp-for="Name">Organization`s name'</label>
                    <input type="text" class="form-control" asp-for="Name" />
                </div>
                <div class="form-group">
                    <label asp-for="Adress">Organization`s address</label>
                    <input type="text" class="form-control" asp-for="Adress" />
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber">Organization`s phone number</label>
                    <input type="tel" class="form-control" asp-for="PhoneNumber" />
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input type="password" class="form-control" asp-for="Password" />
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Confirm password</label>
                    <input type="password" class="form-control" asp-for="ConfirmPassword" />
                </div>
                <button type="submit" class="btn btn-primary">Sign up</button>
            </form>
        </div>
    </div>
</div>